<resources>
    <style name="DayItem.Simple" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DayItem.Simple.Selected" parent="DayItem.Simple">
        <item name="android:background">@drawable/bg_btn_green_round</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MealType" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MealType.Selected" parent="MealType">
        <item name="android:background">@drawable/bg_btn_green_round</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MealType.Unselected" parent="MealType">
        <item name="android:background">@drawable/bg_btn_gray_round</item>
        <item name="android:textColor">#8A8A8A</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded</item>
    </style>

    <style name="MyPageSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyPageMenuItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableEnd">@android:drawable/ic_media_play</item>
        <item name="android:drawableTint">#AEAEAE</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomTab" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomTab.Selected" parent="BottomTab">
        <item name="android:textColor">#2E7D32</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>