<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 앱바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGO"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 날짜/내비 영역 (초록 배경 + 라운드) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="16dp"
            android:background="@drawable/bg_nav_top"
            android:orientation="vertical">

            <!-- 날짜 pill -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_header_pill"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/btnPrevDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="‹"
                    android:textSize="18sp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tvToday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="오늘 (9월 5일 금요일)"
                    android:textSize="13sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/btnNextDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="18sp"
                    android:padding="4dp"/>
            </LinearLayout>

            <!-- 인사 카드 (흰 카드) -->
            <LinearLayout
                android:id="@+id/cardGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태음인 홍길동님,"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvSubHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 컨디션은 어떠신가요?"
                    android:textColor="#7A7A7A"
                    android:layout_marginTop="4dp"/>

                <!-- 목표 3개 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <!-- 걸음수 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:text="70점"
                            android:textStyle="bold"
                            android:background="@drawable/bg_badge_circle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="걸음"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <!-- 운동 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvScoreExercise"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:text="0점"
                            android:textStyle="bold"
                            android:background="@drawable/bg_badge_circle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운동"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <!-- 수면 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:text="100점"
                            android:textStyle="bold"
                            android:background="@drawable/bg_badge_circle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수면"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 작은 버튼 -->
                <Button
                    android:id="@+id/btnWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="작성하기"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_cta_gray"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 프로모션 배너 (간단 카드) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_card">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연휴 끝! 관리 시작!"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건강 플래닛 주간 1+1"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
        </LinearLayout>

        <!-- 오늘의 생활 가이드 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 생활 가이드"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="12dp">


            <TextView
                android:id="@+id/tvGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="태음인은 몸을 따뜻하게 유지하는 것이 중요해요.\n오늘 저녁엔 가벼운 샐러드 어떠세요?"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 바텀 탭 (더미) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tabHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="홈"/>

            <TextView
                android:id="@+id/tabHealth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="건강기록"/>

            <TextView
                android:id="@+id/tabMy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="마이페이지"/>
        </LinearLayout>
        <!-- 오늘 기록 입력 화면으로 이동 -->
        <TextView
            android:id="@+id/btnOpenRecordSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘 기록 입력 열기"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#1976D2"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
