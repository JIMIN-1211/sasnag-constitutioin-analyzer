<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/bg_header_green_rounded_bottom"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동 님,"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvSubHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘도 건강한 하루 보내세요!"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/bg_header_green_rounded_bottom"
            android:elevation="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 기록 확인"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvTodayWorkoutMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동: 0분"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvTodayMealCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식사: 0kcal"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체질 진단"
                        android:textColor="#1B1B1B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/btnOpenBodyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="진단 시작"
                        android:textSize="12sp"
                        android:background="@drawable/bg_btn_green_round"
                        android:textColor="#FFFFFF"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 체질을 확인하고 맞춤 가이드를 받아보세요."
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 건강 점수"
                    android:textColor="#1B1B1B"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#4CAF50"
                        android:contentDescription="운동 아이콘"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="운동"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvScoreExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#FFC107"
                        android:contentDescription="식단 아이콘"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="식단"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvScoreDiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="#FFC107"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#2196F3"
                        android:contentDescription="수면 아이콘"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvScoreSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <TextView
            android:id="@+id/btnHome"
            style="@style/BottomTab.Selected"
            android:drawableTop="@drawable/home" android:text="홈"
            android:textColor="#2E7D32"/>
        <TextView
            android:id="@+id/btnOpenRecord"
            style="@style/BottomTab"
            android:drawableTop="@drawable/health" android:text="건강기록"
            android:textColor="#8A8A8A"/>
        <TextView
            android:id="@+id/btnOpenMyPage"
            style="@style/BottomTab"
            android:drawableTop="@drawable/person" android:text="마이페이지"
            android:textColor="#8A8A8A"/>
    </LinearLayout>

</LinearLayout>