<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/bg_header_green_rounded_bottom"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태음인"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_badge_light_green"
                    android:backgroundTint="#66FFFFFF"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동 님"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_today"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="캘린더" />
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:id="@+id/weekStrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건강 밸런스"
                    android:textStyle="bold"
                    android:textColor="#1B1B1B"/>
                <ImageView
                    android:id="@+id/imgRadar"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="0"
                    android:src="@android:drawable/ic_menu_compass"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    app:tint="#9E9E9E"
                    android:contentDescription="건강 밸런스 레이더 차트" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*태음인에게 가장 중요한 항목입니다."
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:elevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 맞춤 운동"
                    android:textStyle="bold"
                    android:textColor="#1B1B1B"/>
                <TextView
                    android:id="@+id/tvWorkoutDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="땀을 내어 몸을 깨우는 유산소 루틴"
                    android:textColor="#424242"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tvWorkoutMeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45분 · 약 350kcal 소모"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
                <Button
                    android:id="@+id/btnStartWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="맞춤 운동 시작하기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_button_workout"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/titleMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 식사"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,200"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:layout_below="@id/titleMeal"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvCaloriesUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 1,800 kcal"
                        android:textColor="#8A8A8A"
                        android:layout_below="@id/tvCalories"/>

                    <ImageButton
                        android:id="@+id/btnAddMeal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="#FFFFFF"
                        android:background="@drawable/bg_add_button_green_circle"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="식사 추가" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면 시간"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7h 30m"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좋음"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp">
        <TextView
            android:id="@+id/btnHome"
            style="@style/BottomTab"
            android:drawableTop="@drawable/home" android:text="홈"
            android:textColor="#8A8A8A"/>
        <TextView
            android:id="@+id/btnOpenRecord"
            style="@style/BottomTab.Selected"
            android:drawableTop="@drawable/health" android:text="건강기록"
            android:textColor="#2E7D32"/>
        <TextView
            android:id="@+id/btnOpenMyPage"
            style="@style/BottomTab"
            android:drawableTop="@drawable/person" android:text="마이페이지"
            android:textColor="#8A8A8A"/>
    </LinearLayout>
</LinearLayout>