<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 앱바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="←"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="분석 결과"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!-- 본문 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. 사용자 이름 배너 -->
            <TextView
                android:id="@+id/tvUserTitle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingStart="14dp"
                android:text="홍길동 님의 분석 결과"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_header_green"
                android:layout_marginBottom="12dp"/>

            <!-- 카드: 체질 + BMI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- 2. 체질 -->
                <TextView
                    android:id="@+id/tvConstitution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태음인 (太陰人)"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E9ECEF"
                    android:layout_marginBottom="8dp"/>

                <!-- 3. BMI 수치 + 뱃지 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvBmiValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26.5"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="#F46F3E"/>

                    <TextView
                        android:id="@+id/tvBmiBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="과체중"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_badge_orange"/>
                </LinearLayout>

                <!-- 주황 Progress -->
                <ProgressBar
                    android:id="@+id/progressBmi"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="400"
                    android:progress="265"
                    android:progressTint="#FFB74D"
                    android:backgroundTint="#EFEFEF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

                <!-- 4. 설명 문구 -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="홍길동 님의 답변을 분석한 결과, 태음인의 특성과 함께 나타난 신진대사 경향이 나타났어요. 현재 과체중 상태이므로, 식습관 개선과 꾸준한 운동을 통한 체중 관리가 가장 중요합니다."
                    android:textSize="13sp"
                    android:textColor="#444444"/>
            </LinearLayout>

            <!-- 5. 핵심 건강 키워드 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핵심 건강 키워드"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layoutKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- 예시 칩 2개(비워둘 수 있음) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과체중"
                    android:textColor="#F46F3E"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_chip_outline"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신진대사 저하"
                    android:textColor="#7A7A7A"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/bg_chip_outline"/>
            </LinearLayout>

            <!-- 6. 맞춤 솔루션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맞춤 솔루션"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="식단"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="운동"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="생활"
                        android:gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부족 영양소: 식이섬유, 비타민 D"
                    android:textColor="#6A6A6A"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- 7. CTA 버튼 -->
            <Button
                android:id="@+id/btnSeeProducts"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="메인메뉴"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_cta_green"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
